<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="../nifty-1.3.xsd ../nifty-1.3.xsd">
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
	<screen id="hud" controller="org.kolinek.gengame.main.HudComponent$HudController">
		<layer id="foreground" childLayout="vertical">
			<panel width="20%" height="40%" childLayout="vertical" backgroundColor="#9994" align="right"
				valign="top" >
				<panel width="100%" height="10%" childLayout="center">
					<control name="label" text="GenGame" width="100%" height="100%" />
				</panel>
				<panel width="100%" height="10%" childLayout="center">
					<control name="label" id="FPSLabel" text="" width="100%" height="100%" />
				</panel>
				<panel width="100%" height="10%" childLayout="center">
					<control name="label" id="PositionLabel" text="" width="100%" height="100%" />
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>